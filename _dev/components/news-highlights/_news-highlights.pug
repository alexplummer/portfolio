
//- News highlights
//- ============
//- Lists with icons to display skill levels

//- Includes
include ../news-link/_news-link

mixin newsHighlights()

	//- CMS config
	<cms:editable name="group_news_highlights" label="News Highlights" desc="Latest news" type="group"></cms:editable>

	section.news-highlights
		.inner
			//- News link
			<cms:pages masterpage="article.php" limit="2">
			- var heading = '<cms:show k_page_title "/>"'
			- var date = '<cms:date k_page_date format="jS F, Y" "/>"'
			- var content = '<cms:excerptHTML count="70" ignore="img"><cms:show article_standfirst "/>"</cms:excerptHTML>'
			+newsLink(heading, date, content)(src="<cms:show article_thumb />" href="<cms:show k_page_link />")
			</cms:pages>
										