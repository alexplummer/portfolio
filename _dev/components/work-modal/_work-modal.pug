mixin workModal()
	article.work-modal.modal-inactive(tabindex="-1" role="dialog" hidden)
		button.close(title="Close the dialog")
		.inner
			.content
				
			.screenshots
				img(src="img/device-desktop-straight.svg"  aria-hidden="true" role="presentation").svg
				img(src="img/device-mobile-straight.svg"  aria-hidden="true" role="presentation").svg.mobile

				.screens
				
				.controls